@model frontend_csharp.Models.UserData
@{
    string valueAction = this.ViewData.ContainsKey("action") ? this.ViewData["action"].ToString() : string.Empty;
    string valueButton = this.ViewData.ContainsKey("button") ? this.ViewData["button"].ToString() : string.Empty;
}

<div class="row">
  <div class="col">
    <a class="btn btn-success" 
              asp-action="Index" 
              asp-controller="User">
      Volver
    </a>
  </div>
</div>

<br>

<form asp-action="@valueAction" asp-route-id="@Model.Id" method="POST">
  
  <div class="form-group">
    <label for="Name">Nombre</label>
    <input class="form-control" name="Name" type="text" value="@Model.Name" placeholder="Nombre" />
  </div>

  <div class="form-group">
    <label for="Email">Email</label>
    <input class="form-control" name="Email" type="email" value="@Model.Email" placeholder="Email" />
  </div>


  <button type="submit" class="btn btn-primary">@valueButton</button>
</form>